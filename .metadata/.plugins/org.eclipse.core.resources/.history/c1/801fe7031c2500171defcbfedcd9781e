package exercises;
import java.util.Scanner;
public class PizzaChoice 
{

	public static void main(String[] args) 
{
		// TODO Auto-generated method stub
		String choice1;
		String choice2;
		String choice3;
		String choice4;
		int toppingChoice;
		double large = 9.99;
		double medium = 6.99;
		double small = 3.99;
		
		Scanner input = new Scanner(System.in);
		System.out.print("Would you like a pizza? Yes or No>>>");
		choice1 = input.nextLine();
		
		if(choice1.equals("yes")||choice1.equals("Yes")||choice1.equals("Y")||choice1.equals("y"))
		{
			System.out.print("You said " + choice1 + " to a pizza.");
			System.out.print("Please choose a topping. 1 for Supreme, 2 for Cheese, and 3 for Meatlovers.");
			toppingChoice = input.nextInt();
			if(toppingChoice == 1)
			{
				System.out.print("You wanted a Supreme, what size? Small, Medium, or Large?");
				choice2 = input.nextLine();
				if(choice2.equals("small")||choice2.equals("Small"))
				{
					System.out.print("That'll be $3.99.");
				}
				if(choice2.equals("Medium")||choice2.equals("medium"))
				{
					System.out.print("That'll be $6.99.");
				}
				if(choice2.equals("Large")||choice2.equals("large"))
				{
					System.out.print("That'll be $9.99.");
				}
			
			if(toppingChoice == 2)
				{
				System.out.print("You wanted a Cheese, what size? Small, Medium, or Large?");
				choice3 = input.nextLine();
				if(choice3.equals("small")||choice3.equals("Small"))
					{
					System.out.print("That'll be $3.99.");
					}
				if(choice3.equals("Medium")||choice3.equals("medium"))
					{
					System.out.print("That'll be $6.99.");
					}
				if(choice3.equals("Large")||choice3.equals("large"))
					{
					System.out.print("That'll be $9.99.");
					}
				
			if(toppingChoice == 3)
				{
				System.out.print("You wanted a Meatlovers, what size? Small, Medium, or Large?");
				choice4 = input.nextLine();
				if(choice4.equals("small")||choice4.equals("Small"))
					{
					System.out.print("That'll be $3.99.");
					}
				if(choice4.equals("Medium")||choice4.equals("medium"))
					{
					System.out.print("That'll be $6.99.");
					}
				if(choice4.equals("Large")||choice4.equals("large"))
					{
					System.out.print("That'll be $9.99.");
					}
				}
				}
			}
		}
}
}
			
		
	

