package methodConstruction;

import javax.swing.JOptionPane;

public class page134Modified 
{

	public static void main(String[] args) 
	{
		// TODO Auto-generated method stub
		char vType = 0;
		int value = 0;
		double commRate = 0;
		computeCommission(value, commRate, vType);
		computeCommission(40000, 0.10, 'L');
	
	}
	public static void computeCommission(double value, double rate, char vehicle)
	{
			String valueString;
			String vType = JOptionPane.showInputDialog(null, "What type of car is it?", 
					JOptionPane.QUESTION_MESSAGE);
			valueString = JOptionPane.showInputDialog(null, "What is the value of the car?", 
					JOptionPane.QUESTION_MESSAGE);
			
			double commission;
			commission = value * rate;
			System.out.println("\nThe " + vehicle + " type vehicle is worth $" + value);
			System.out.println("With " + (rate * 100) + "% commision rate, the commission is $" + commission);
	}
}
